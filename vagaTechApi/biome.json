{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["package.json", ""]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
		"enabled": true,
		"arrowParentheses": "always",
		"quoteStyle": "single",
		"bracketSpacing": true,
		"bracketSameLine": true,
		"lineWidth": 80,
		"indentWidth": 8,
		"indentStyle": "tab"
		}
	}
}
